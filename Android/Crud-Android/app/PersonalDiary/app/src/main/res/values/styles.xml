<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">serif-monospace</item>
    </style>

    <style name="genericTitle">
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginEnd">90dp</item>
    </style>

    <style name="genericText">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginEnd">90dp</item>
    </style>

    <style name="genericButton">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">90dp</item>
        <item name="android:layout_marginEnd">90dp</item>
    </style>

    <style name="generic_label_addItem">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
